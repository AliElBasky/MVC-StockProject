@model StockFormViewModel

@{
    ViewData["Title"] = "Stock";
}

<h2>
    <i class="bi bi-bag-plus"></i>
    Stock
</h2>
<hr />

<section>
    <form method="post" asp-action="Add">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="StoreId" class="text-muted">Stores</label>
                    <select class="form-control" asp-for="StoreId" asp-items="@(new SelectList(Model.Stores, "Id", "Name"))">
                        <option></option>
                    </select>
                    <span asp-validation-for="StoreId" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="ItemId" class="text-muted">Items</label>
                    <select class="form-control" asp-for="ItemId" asp-items="@(new SelectList(Model.Items, "Id", "Name"))">
                        <option></option>
                    </select>
                    <span asp-validation-for="ItemId" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Quantity" class="text-muted">Quantity</label>
                    <input asp-for="Quantity" type="number" class="form-control" value="" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>

                </div>
            </div>
                <div class="form-group">
                    <label asp-for="TotalQuantity" class="text-muted">Quantity</label>
                    <input asp-for="TotalQuantity" type="text" disabled class="form-control" value="@Model.TotalQuantity" />
                </div>
                <div class="form-group mt-4">
                    <button class="btn btn-primary">
                        <i class="bi bi-check-lg"></i>
                        Save
                    </button>
                </div>
        </div>
    </form>
</section>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}